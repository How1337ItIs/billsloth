    echo -e "\033[0m"
}

validate_core_system() {
    echo "ğŸ” VALIDATING CORE SYSTEM..."
    local issues=0
    
    # Check main command center
    if [ -f "$(dirname "$0")/../bill_command_center.sh" ]; then
        log_validation "âœ… Main command center exists"
    else
        log_validation "âŒ Main command center missing"
        ((issues++))
    fi
    
    # Check lib directory
    if [ -d "$(dirname "$0")/../lib" ]; then
        local lib_count=$(find "$(dirname "$0")/../lib" -name "*.sh" | wc -l)
        log_validation "âœ… Library system: $lib_count libraries found"
    else
        log_validation "âŒ Library system missing"
        ((issues++))
    fi
    
    # Check modules directory
    if [ -d "$(dirname "$0")/../modules" ]; then
        local module_count=$(find "$(dirname "$0")/../modules" -name "*_interactive.sh" | wc -l)
        log_validation "âœ… Module system: $module_count interactive modules found"
    else
        log_validation "âŒ Module system missing"
        ((issues++))
    fi
    
    return $issues
}

validate_professional_tools() {
    echo "ğŸ› ï¸ VALIDATING PROFESSIONAL TOOLS..."
    local issues=0
    
    # Check Docker
    if command -v docker >/dev/null 2>&1; then
        log_validation "âœ… Docker installed"
        if docker --version | grep -q "Docker version"; then
            log_validation "âœ… Docker working"
        else
            log_validation "âš ï¸ Docker installed but not responding"
            ((issues++))
        fi
    else
        log_validation "âŒ Docker not installed"
        ((issues++))
    fi
    
    # Check PipeWire
    if command -v pipewire >/dev/null 2>&1; then
        log_validation "âœ… PipeWire installed (professional audio)"
    else
        log_validation "âš ï¸ PipeWire not installed (still using amateur audio)"
    fi
    
    # Check Borg Backup
    if command -v borg >/dev/null 2>&1; then
        log_validation "âœ… Borg Backup installed (professional backup)"
    else
        log_validation "âš ï¸ Borg Backup not installed (amateur backup system)"
    fi
    
    # Check modern tools
    local modern_tools=("rg" "fd" "bat" "exa" "btop")
    for tool in "${modern_tools[@]}"; do
        if command -v "$tool" >/dev/null 2>&1; then
            log_validation "âœ… $tool installed"
        else
            log_validation "âš ï¸ $tool not installed (using amateur alternative)"
        fi
    done
    
    return $issues
}

validate_business_modules() {
    echo "ğŸ’¼ VALIDATING BUSINESS MODULES..."
    local issues=0
    
    # Check VRBO automation
    if [ -f "$(dirname "$0")/../modules/vrbo_automation_pro.sh" ]; then
        log_validation "âœ… VRBO Automation Pro module exists"
    else
        log_validation "âŒ VRBO Automation Pro module missing"
        ((issues++))
    fi
    
    # Check business partnerships
    if [ -f "$(dirname "$0")/../modules/business_partnerships_interactive.sh" ]; then
        log_validation "âœ… Business Partnerships module exists"
    else
        log_validation "âŒ Business Partnerships module missing"
        ((issues++))
    fi
    
    # Check Docker Compose for business services
    if [ -f "$(dirname "$0")/../docker-compose.yml" ]; then
        log_validation "âœ… Docker Compose for business services exists"
    else
        log_validation "âŒ Docker Compose configuration missing"
        ((issues++))
    fi
    
    return $issues
}

validate_network_system() {
    echo "ğŸŒ VALIDATING NETWORK SYSTEM..."
    local issues=0
    
    # Check decomposed network modules
    local network_modules=(
        "vpn_security_interactive.sh"
        "wireless_connectivity_interactive.sh" 
        "network_monitoring_interactive.sh"
        "network_optimization_interactive.sh"
        "network_diagnostics_interactive.sh"
    )
    
    for module in "${network_modules[@]}"; do
        if [ -f "$(dirname "$0")/../modules/$module" ]; then
            log_validation "âœ… $module exists"
        else
            log_validation "âŒ $module missing"
            ((issues++))
        fi
    done
    
    return $issues
}

validate_streaming_system() {
    echo "ğŸ¬ VALIDATING STREAMING SYSTEM..."
    local issues=0
    
    # Check streaming module
    if [ -f "$(dirname "$0")/../modules/streaming_setup_interactive.sh" ]; then
        log_validation "âœ… Streaming setup module exists"
        
        # Check for professional audio references
        if grep -q "PipeWire\|Carla\|qpwgraph" "$(dirname "$0")/../modules/streaming_setup_interactive.sh"; then
            log_validation "âœ… Professional audio tools integrated"
        else
            log_validation "âš ï¸ Amateur audio tools detected"
        fi
    else
        log_validation "âŒ Streaming setup module missing"
        ((issues++))
    fi
    
    return $issues
}

validate_data_persistence() {
    echo "ğŸ’¾ VALIDATING DATA PERSISTENCE..."
    local issues=0
    
    # Check data directories
    if [ -d "$HOME/.bill-sloth" ]; then
        log_validation "âœ… Main data directory exists"
        
        local size=$(du -sh "$HOME/.bill-sloth" | cut -f1)
        log_validation "ğŸ“Š Data directory size: $size"
    else
        log_validation "âŒ Main data directory missing"
        ((issues++))
    fi
    
    # Check backup system
    if [ -f "$HOME/bin/bill-backup-pro" ]; then
        log_validation "âœ… Professional backup system configured"
    else
        log_validation "âš ï¸ Professional backup system not configured"
    fi
    
    return $issues
}

run_functionality_tests() {
    echo "ğŸ§ª RUNNING FUNCTIONALITY TESTS..."
    local issues=0
    
    # Test main command center syntax
    if bash -n "$(dirname "$0")/../bill_command_center.sh"; then
        log_validation "âœ… Main command center syntax valid"
    else
        log_validation "âŒ Main command center has syntax errors"
        ((issues++))
    fi
    
    # Test key modules syntax
    local key_modules=(
        "vrbo_automation_pro.sh"
        "business_partnerships_interactive.sh"
        "streaming_setup_interactive.sh"
    )
    
    for module in "${key_modules[@]}"; do
        if [ -f "$(dirname "$0")/../modules/$module" ]; then
            if bash -n "$(dirname "$0")/../modules/$module"; then
                log_validation "âœ… $module syntax valid"
            else
                log_validation "âŒ $module has syntax errors"
                ((issues++))
            fi
        fi
    done
    
    return $issues
}

main_validation() {
    clear
    show_banner
    
    echo -e "\033[38;5;46mğŸ” BILL SLOTH SYSTEM VALIDATOR - COMPREHENSIVE HEALTH CHECK ğŸ”\033[0m"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    
    log_validation "ğŸš€ Starting comprehensive system validation..."
    
    local total_issues=0
    
    # Run all validations
    validate_core_system; total_issues=$((total_issues + $?))
    echo ""
    
    validate_professional_tools; total_issues=$((total_issues + $?))
    echo ""
    
    validate_business_modules; total_issues=$((total_issues + $?))
    echo ""
    
    validate_network_system; total_issues=$((total_issues + $?))
    echo ""
    
    validate_streaming_system; total_issues=$((total_issues + $?))
    echo ""
    
    validate_data_persistence; total_issues=$((total_issues + $?))
    echo ""
    
    run_functionality_tests; total_issues=$((total_issues + $?))
    echo ""
    
    # Final report
    echo "ğŸ“Š VALIDATION SUMMARY"
    echo "â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    
    if [ $total_issues -eq 0 ]; then
        echo -e "\033[38;5;46mğŸ‰ SYSTEM VALIDATION PASSED! ğŸ‰\033[0m"
        echo ""
        echo "âœ… All core systems operational"
        echo "âœ… Professional tools integrated"
        echo "âœ… Business modules functional"
        echo "âœ… Network system optimized"
        echo "âœ… Streaming system professional-grade"
        echo "âœ… Data persistence configured"
        echo ""
        echo "ğŸ§  Carl: 'Your digital empire is ready for world domination!'"
        
        log_validation "âœ… System validation completed successfully - 0 issues"
        
    else
        echo -e "\033[38;5;196mâš ï¸ VALIDATION FOUND $total_issues ISSUE(S) âš ï¸\033[0m"
        echo ""
        echo "ğŸ“‹ TO FIX ISSUES:"
        echo "â€¢ Run: bash bin/professional-tools-upgrade"
        echo "â€¢ Check: $VALIDATION_LOG for details"
        echo "â€¢ Review missing modules and reinstall if needed"
        echo ""
        echo "ğŸ§  Carl: 'Fix these issues and you'll achieve digital supremacy!'"
        
        log_validation "âš ï¸ System validation completed with $total_issues issues"
    fi
    
    echo ""
    echo "ğŸ“„ Full validation log: $VALIDATION_LOG"
}

# Run validation
main_validation