test_voice_installation() {
    echo "ğŸ” TESTING VOICE CONTROL INSTALLATION"
    echo "======================================"
    echo ""
    
    local issues=0
    
    # Check Python virtual environment
    if [ -d ~/.bill-sloth/voice/venv ]; then
        echo "âœ… Python virtual environment exists"
    else
        echo "âŒ Python virtual environment missing"
        ((issues++))
    fi
    
    # Check voice daemon
    if [ -f ~/.bill-sloth/voice/voice_daemon.py ]; then
        echo "âœ… Voice daemon installed"
    else
        echo "âŒ Voice daemon missing"
        ((issues++))
    fi
    
    # Check systemd service
    if [ -f ~/.config/systemd/user/bill-voice-daemon.service ]; then
        echo "âœ… Systemd service configured"
    else
        echo "âŒ Systemd service missing"
        ((issues++))
    fi
    
    # Check voice commands
    if [ -d ~/.bill-sloth/voice/scripts ]; then
        local script_count=$(find ~/.bill-sloth/voice/scripts -name "*.py" -o -name "*.sh" | wc -l)
        echo "âœ… Voice command scripts: $script_count found"
    else
        echo "âŒ Voice command scripts missing"
        ((issues++))
    fi
    
    # Check training system
    if [ -f ~/.bill-sloth/voice/voice_trainer.py ]; then
        echo "âœ… Voice training system available"
    else
        echo "âŒ Voice training system missing"
        ((issues++))
    fi
    
    echo ""
    if [ $issues -eq 0 ]; then
        echo "ğŸ‰ Voice control installation complete!"
        return 0
    else
        echo "âš ï¸  Found $issues issues. Run voice control optimizer first."
        return 1
    fi
}

test_voice_dependencies() {
    echo "ğŸ§ª TESTING VOICE DEPENDENCIES"
    echo "============================="
    echo ""
    
    local issues=0
    
    # Test Python packages
    if source ~/.bill-sloth/voice/venv/bin/activate 2>/dev/null; then
        echo "âœ… Python virtual environment activated"
        
        # Test Whisper
        if python -c "import whisper" 2>/dev/null; then
            echo "âœ… OpenAI Whisper available"
        else
            echo "âŒ OpenAI Whisper not installed"
            ((issues++))
        fi
        
        # Test PyAudio
        if python -c "import pyaudio" 2>/dev/null; then
            echo "âœ… PyAudio available"
        else
            echo "âŒ PyAudio not installed"
            ((issues++))
        fi
        
        # Test TTS
        if python -c "import pyttsx3" 2>/dev/null; then
            echo "âœ… Text-to-Speech available"
        else
            echo "âŒ Text-to-Speech not installed"
            ((issues++))
        fi
        
        deactivate 2>/dev/null || true
    else
        echo "âŒ Cannot activate Python environment"
        ((issues++))
    fi
    
    # Test system audio
    if command -v pulseaudio >/dev/null 2>&1 || command -v pipewire >/dev/null 2>&1; then
        echo "âœ… Audio system available"
    else
        echo "âŒ No audio system found"
        ((issues++))
    fi
    
    # Test microphone
    if ls /dev/dsp* /dev/audio* 2>/dev/null || pactl list sources short 2>/dev/null | grep -q input; then
        echo "âœ… Microphone input detected"
    else
        echo "âš ï¸  No microphone input detected"
    fi
    
    echo ""
    if [ $issues -eq 0 ]; then
        echo "ğŸ‰ All dependencies working!"
        return 0
    else
        echo "âš ï¸  Found $issues dependency issues."
        return 1
    fi
}

