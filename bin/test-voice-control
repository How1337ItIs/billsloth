    clear
    show_banner
    
    echo -e "\033[38;5;226mğŸ¤ VOICE CONTROL TEST SUITE - VERIFY JARVIS FUNCTIONALITY ğŸ¤\033[0m"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    
    # Run all tests
    if test_voice_installation; then
        echo ""
        if test_voice_dependencies; then
            echo ""
            test_voice_service
            echo ""
            demonstrate_voice_commands
            echo ""
            interactive_voice_demo
        fi
    fi
    
    echo ""
    echo "ğŸ‰ VOICE CONTROL TEST COMPLETE!"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    echo "ğŸ§  Carl: 'Your voice is now your most powerful tool!'"
    echo ""
    echo "ğŸ¯ NEXT STEPS:"
    echo "â€¢ Start daemon: systemctl --user start bill-voice-daemon"
    echo "â€¢ Train custom commands: python3 ~/.bill-sloth/voice/voice_trainer.py"
    echo "â€¢ Monitor activity: tail -f ~/.bill-sloth/logs/voice_daemon.log"
    echo ""
    echo "ğŸ¤ TRY IT NOW: Say 'Hey Bill, system status' to test!"
}

