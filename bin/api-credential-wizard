setup_twilio_sms() {
    echo ""
    echo "ðŸ“ž TWILIO SMS SETUP"
    echo "==================="
    echo ""
    echo "ðŸ“‹ REQUIREMENTS:"
    echo "â€¢ Twilio account (free trial available)"
    echo "â€¢ Phone number verification"
    echo "â€¢ Account SID and Auth Token"
    echo ""
    
    read -p "Twilio Account SID: " twilio_sid
    read -p "Twilio Auth Token: " twilio_token
    read -p "Twilio Phone Number (+1234567890): " twilio_from
    read -p "Your Phone Number (+1234567890): " twilio_to
    
    mkdir -p ~/.bill-sloth/notifications
    cat > ~/.bill-sloth/notifications/twilio.json << EOF
{
  "provider": "twilio",
  "account_sid": "$twilio_sid",
  "auth_token": "$twilio_token",
  "from_number": "$twilio_from",
  "to_number": "$twilio_to",
  "api_url": "https://api.twilio.com/2010-04-01"
}
EOF
    chmod 600 ~/.bill-sloth/notifications/twilio.json
    
    log_api "âœ… Twilio SMS configured"
    echo "âœ… Twilio SMS configured!"
}

generate_api_summary() {
    log_api "ðŸ“Š Generating API configuration summary..."
    
    local summary_file="$HOME/.bill-sloth/reports/api_configuration_$(date +%Y%m%d_%H%M%S).txt"
    mkdir -p "$(dirname "$summary_file")"
    
    cat > "$summary_file" << EOF
BILL SLOTH API CONFIGURATION SUMMARY
Generated: $(date)
====================================

CONFIGURED APIS:
EOF
    
    # Check each API configuration
    if [ -f ~/.bill-sloth/vrbo/credentials.json ]; then
        echo "âœ… VRBO/Expedia Partner API" >> "$summary_file"
    else
        echo "âŒ VRBO API - Not configured" >> "$summary_file"
    fi
    
    if [ -f ~/.bill-sloth/email/config.json ]; then
        local provider=$(grep '"provider"' ~/.bill-sloth/email/config.json | cut -d'"' -f4)
        echo "âœ… Email Service - $provider" >> "$summary_file"
    else
        echo "âŒ Email Service - Not configured" >> "$summary_file"
    fi
    
    # Check notifications
    local notif_count=0
    for notif_file in ~/.bill-sloth/notifications/*.json; do
        if [ -f "$notif_file" ]; then
            local provider=$(basename "$notif_file" .json)
            echo "âœ… Notifications - $provider" >> "$summary_file"
            ((notif_count++))
        fi
    done
    
    if [ $notif_count -eq 0 ]; then
        echo "âŒ Notifications - Not configured" >> "$summary_file"
    fi
    
    cat >> "$summary_file" << EOF

NEXT STEPS:
1. Test all API connections
2. Set up automated workflows
3. Configure monitoring and alerts
4. Review security settings

CONFIGURATION FILES:
â€¢ VRBO: ~/.bill-sloth/vrbo/credentials.json
â€¢ Email: ~/.bill-sloth/email/config.json  
â€¢ Notifications: ~/.bill-sloth/notifications/

For support, check the logs at: $LOG_FILE
EOF
    
    echo "ðŸ“„ Configuration summary: $summary_file"
    log_api "ðŸ“Š API summary generated: $summary_file"
}

