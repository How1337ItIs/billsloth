#!/bin/bash
# Bill Sloth Auto-startup System
# Runs at boot to initialize hotkeys and voice interface

echo "ðŸš€ BILL SLOTH LINUX HELPER AUTOSTART"
echo "====================================="

# Wait for desktop environment to load
sleep 5

# Ensure ~/bin is in PATH
export PATH="$HOME/bin:$PATH"

# Make sure all scripts are executable
chmod +x ~/bin/*
chmod +x ~/BillSloth/modules/*.sh
chmod +x ~/BillSloth/lab.sh

# Start hotkey system
echo "ðŸ”¥ Starting hotkey system..."
~/bin/hotkey-system

# Show startup notification with ATHF reference
notify-send "ðŸ” BILL SLOTH HELPER" "I get it! It ain't making me laugh, but I get it! Press F12 for lab, F11 for voice interface"

# Create desktop shortcut for easy access
cat > ~/Desktop/BillSlothLab.desktop << 'EOF'
[Desktop Entry]
Name=Bill Sloth Lab
Comment=ATHF-style Linux helper
Exec=gnome-terminal --title="Bill Sloth Lab" -- bash -c "cd ~/BillSloth && ./lab.sh; exec bash"
Icon=computer
Terminal=false
Type=Application
Categories=System;
EOF

chmod +x ~/Desktop/BillSlothLab.desktop

# Add to autostart
mkdir -p ~/.config/autostart
cat > ~/.config/autostart/billsloth.desktop << 'EOF'
[Desktop Entry]
Name=Bill Sloth Helper
Comment=ATHF-style Linux helper autostart
Exec=/home/$USER/bin/autostart-billsloth
Icon=computer
Terminal=false
Type=Application
Hidden=false
X-GNOME-Autostart-enabled=true
EOF

echo "âœ… Bill Sloth Helper is now ready!"
echo ""
echo "ðŸŽ® QUICK ACCESS:"
echo "â€¢ F12 - Open lab interface"
echo "â€¢ F11 - Voice interface (Meatwad style)"
echo "â€¢ Ctrl+Alt+F - Frylock mode (logical)"
echo "â€¢ Ctrl+Alt+M - Meatwad mode (simple)"
echo "â€¢ Ctrl+Alt+S - Shake mode (chaos)"
echo "â€¢ Ctrl+Alt+C - Carl mode (fake computer expertise)"
echo "â€¢ Super+Space - Brain dump"
echo "â€¢ Super+T - Task board"
echo "â€¢ Super+V - VPN check"
echo ""
echo "ðŸ” Meatwad: 'I understand! Everything is ready!'"

# Play Aqua Teen theme if espeak is available
if command -v espeak &> /dev/null; then
    espeak "Number one in the hood G! Bill Sloth Helper activated!" 2>/dev/null &
fi