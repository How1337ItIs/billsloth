main_switcher() {
    clear
    show_banner
    
    echo -e "\033[38;5;129mğŸ¤ VOICE MODE SWITCHER - FLEXIBLE VOICE CONTROL OPTIONS ğŸ¤\033[0m"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    echo "ğŸ¯ ADDING FLEXIBLE VOICE CONTROL:"
    echo "â€¢ Wake word mode (always listening)"
    echo "â€¢ Hotkey mode (push-to-talk)"
    echo "â€¢ Auto mode (smart switching)"
    echo "â€¢ Easy configuration management"
    echo ""
    
    log_voice "ğŸš€ Starting voice mode switcher setup..."
    
    # Create Python dependencies
    source ~/.bill-sloth/voice/venv/bin/activate 2>/dev/null || {
        echo "âŒ Voice environment not found. Run voice-control-optimizer first."
        exit 1
    }
    
    # Install additional dependencies
    pip install pynput psutil >/dev/null 2>&1
    deactivate
    
    # Create components
    create_hotkey_daemon
    echo "âœ… Hotkey daemon created"
    
    create_adaptive_voice_daemon
    echo "âœ… Adaptive daemon created"
    
    create_voice_config_manager
    echo "âœ… Configuration manager created"
    
    create_systemd_services
    echo "âœ… Systemd services updated"
    
    show_voice_modes
    
    echo ""
    echo "ğŸ‰ VOICE MODE SWITCHER COMPLETE!"
    echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    echo ""
    echo "ğŸ§  Carl: 'Now you have voice control exactly how you want it!'"
    echo ""
    echo "âœ… THREE VOICE MODES AVAILABLE:"
    echo "â€¢ ğŸ¤– Wake Word: 'Hey Bill', 'Jarvis' (hands-free)"
    echo "â€¢ ğŸ”¥ Hotkey: Ctrl+Alt+V (push-to-talk)"
    echo "â€¢ ğŸ§  Auto: Smart switching based on conditions"
    echo ""
    echo "ğŸ¯ CONFIGURATION COMMANDS:"
    echo "â€¢ Configure: python3 ~/.bill-sloth/voice/voice_config.py"
    echo "â€¢ Start adaptive: systemctl --user start bill-voice-adaptive"
    echo "â€¢ Start hotkey only: systemctl --user start bill-voice-hotkey"
    echo ""
    echo "ğŸ’¡ DEFAULT SETUP:"
    echo "â€¢ Mode: Auto (switches intelligently)"
    echo "â€¢ Hotkey: Ctrl+Alt+V"
    echo "â€¢ Wake words: 'Hey Bill', 'Jarvis', 'Computer'"
    echo ""
    
    read -p "Start adaptive voice control now? (y/n): " start_now
    if [[ "$start_now" =~ ^[Yy] ]]; then
        echo "ğŸ¤ Starting adaptive voice control..."
        systemctl --user enable bill-voice-adaptive.service
        systemctl --user start bill-voice-adaptive.service
        echo "âœ… Adaptive voice control started!"
        echo "ğŸ¯ Try both: Say 'Hey Bill, system status' OR press Ctrl+Alt+V and speak"
    fi
    
    log_voice "âœ… Voice mode switcher setup completed successfully"
}

