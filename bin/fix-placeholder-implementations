load_includes "core" "notification" "error_handling"

LOG_FILE="$HOME/.bill-sloth/logs/placeholder_fix.log"
mkdir -p "$(dirname "$LOG_FILE")"

log_fix() {
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] $1" | tee -a "$LOG_FILE"
}

